{
  "openapi": "3.1.0",
  "info": {
    "title": "Video Metadata Service",
    "version": "0.1.0"
  },
  "paths": {
    "/videos": {
      "get": {
        "summary": "List video metadata",
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {"$ref": "#/components/schemas/VideoMetadataWithActionsDTO"}
                }
              }
            }
          }
        }
      }
    },
    "/videos/{video_id}": {
      "get": {
        "summary": "Read video metadata",
        "parameters": [
          {"name": "video_id", "in": "path", "required": true, "schema": {"type": "string"}}
        ],
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {"$ref": "#/components/schemas/VideoMetadataWithActionsDTO"}
              }
            }
          },
          "404": {"description": "Not Found"}
        }
      }
    },
    "/videos/search": {
      "get": {
        "summary": "Search video metadata",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {"schema": {"type": "object"}}
          }
        },
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {"$ref": "#/components/schemas/VideoMetadataWithActionsDTO"}
                }
              }
            }
          }
        }
      }
    },
    "/videos/search_with_mongo": {
      "get": {
        "summary": "Search and enrich video metadata",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {"schema": {"type": "object"}}
          }
        },
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {"$ref": "#/components/schemas/EnrichedVideoMetadataDTO"}
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CompanyDTO": {
        "type": "object",
        "properties": {
          "id": {"type": "integer"},
          "name": {"type": "string"}
        },
        "required": ["id", "name"]
      },
      "ActionRecognitionResultDTO": {
        "type": "object",
        "properties": {
          "frame_num": {"type": "integer"},
          "timestamp": {"type": "string"},
          "action": {"type": "string"},
          "confidence": {"type": "number"},
          "clip_length": {"type": "integer"}
        },
        "required": ["frame_num", "timestamp", "action", "confidence", "clip_length"]
      },
      "VideoMetadataDTO": {
        "type": "object",
        "properties": {
          "video_id": {"type": "string"},
          "timestamp": {"type": "string", "format": "date-time"},
          "company": {"$ref": "#/components/schemas/CompanyDTO"},
          "extra": {"type": "object"}
        },
        "required": ["video_id", "timestamp", "company", "extra"]
      },
      "VideoMetadataWithActionsDTO": {
        "allOf": [
          {"$ref": "#/components/schemas/VideoMetadataDTO"},
          {
            "type": "object",
            "properties": {
              "actions": {
                "type": "array",
                "items": {"$ref": "#/components/schemas/ActionRecognitionResultDTO"}
              }
            }
          }
        ]
      },
      "EnrichedVideoMetadataDTO": {
        "type": "object",
        "properties": {
          "metadata": {"$ref": "#/components/schemas/VideoMetadataWithActionsDTO"},
          "mongo": {"type": "object"}
        },
        "required": ["metadata"]
      }
    }
  }
}
